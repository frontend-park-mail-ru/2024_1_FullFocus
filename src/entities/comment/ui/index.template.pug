div(class=`${className} comment-card`)
    img(class="comment-card__img" src=`${avatar}` alt="img")
    div(class="comment-card__info")
        div(class="comment-card__info-nameMarkAndDate")
            div(class="comment-card__info-name") #{name}
            div(class="comment-card__info-date") #{date}
            div(class="comment-card__info-mark") #{mark} ★
        - var adv = advantages
        case adv
            when ""
                break
            default
                div(class="comment-card__info-advantages") Достоинства
                div(class="comment-card__info-advantages-user") #{advantages}
        - var disadv = disadvantages
        case disadv
            when ""
                break
            default
                div(class="comment-card__info-disadvantages") Недостатки
                div(class="comment-card__info-disadvantages-user") #{disadvantages}

        div(class="comment-card__info-text") Комментарий
        div(class="comment-card__info-text-user") #{comment}

