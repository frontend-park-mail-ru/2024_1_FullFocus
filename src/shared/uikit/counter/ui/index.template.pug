div(class=`${className} counter`)
    button(class="counter__minus counter__btn" type="button" data-action="minus")
        svg(class="counter__icon" width="16" height="2" viewBox="0 0 16 2" fill="none" xmlns="http://www.w3.org/2000/svg")
            path(class="counter__icon-path" d="M1 1H15H1Z" fill="#D9D9D9")
            path(class="counter__icon-path" d="M1 1H15" stroke="#3A817C" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")
    div(class="counter__data") #{initial}
    button(class="counter__plus counter__btn" type="button" data-action="plus")
        svg(class="counter__icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg")
            path(class="counter__icon-path" d="M1 8H8M8 8H15M8 8V1M8 8V15" stroke="#3A817C" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")