{
    "include": ["src/**/*", "./*", "../*"],
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "typeRoots": ["src/shared/@types", "node_modules/@types"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
