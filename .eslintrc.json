{
    "env": {
        "browser": true,
        "es2021": true
    },
    "root": true,
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "init-declarations": ["error", "always"],
        "max-lines-per-function": ["warn", 40],
        "multiline-comment-style": "error",
        "no-else-return": "error",
        "no-var": "error",
        "prefer-const": "error",
        "yoda": "error"
    }
}
